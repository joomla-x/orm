<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE entity SYSTEM
    "https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.dtd">
<entity name="Joomla\ORM\Tests\Mocks\Extra">

    <storage>
        <default table="extras" primary="detail_id"/>
    </storage>

    <fields>
        <field
            name="info"
            type="text"
            default=""
        />
        <field
            name="detail_id"
            type="foreignkey"
            entity="Detail"
        >
        </field>
    </fields>

    <relations>
        <belongsTo
            name="detail"
            entity="Detail"
            reference="detail_id"
        />
    </relations>

</entity>
