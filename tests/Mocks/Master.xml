<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE entity SYSTEM
    "https://github.com/nibralab/joomla-architecture/blob/master/code/Joomla/ORM/Definition/entity.dtd">
<entity name="Joomla\ORM\Tests\Mocks\Master">

    <storage>
        <default table="masters"/>
    </storage>

    <fields>
        <field name="id" type="id"/>
        <field name="title" type="title"/>
        <field name="field_a" type="text" default=""/>
        <field name="field_b" type="text" default=""/>
        <field name="field_c" type="text" default=""/>
    </fields>

    <relations>
        <belongsTo
            name="parent_id"
            entity="Master"
        />
        <hasMany
            name="children"
            entity="Master"
            reference="parent_id"
        />
        <hasMany
            name="details"
            entity="Detail"
            reference="master_id"
        />
        <hasManyThrough
            name="tags"
            entity="Tag"
            reference="master_id"
            joinTable="map"
            joinRef="tag_id"
        />
    </relations>

</entity>
